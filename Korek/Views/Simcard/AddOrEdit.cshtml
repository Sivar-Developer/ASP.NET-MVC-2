@model Korek.Models.Simcard
@{
    int id = ViewBag.Id;
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Simcard", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.SimcardID)

    @Html.HiddenFor(model => model.CorporateID, new { Value = @id })

    <div class="form-group">
        @Html.LabelFor(model => model.Number, new { @class = "control-label" })
        @Html.EditorFor(model => model.Number, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Number)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.CustomerName, new { @class = "control-label" })
        @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.CustomerName)
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-dark" />
        <input type="reset" value="Reset" class="btn btn-default" />
    </div>
}